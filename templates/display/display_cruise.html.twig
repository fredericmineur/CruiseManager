                            {% for investigator in trip.tripinvestigators %}
                                {{ investigator.firstname  }} {{ investigator.surname}}
                                {% if loop.last %}{% else %}, {% endif %}
                            {% endfor %}
                                <a href="{{ path('trip_edit', {'tripId': trip.tripid}) }}"><i
                                            class="btn btn-default fa fa-edit fa-2x"></i></a>
                            </p>
                        </div>
{#                        </div>#}





                    </div>
{#                </div>#}



            {% endfor %}
