{% extends 'base.html.twig' %}

{% block stylesheets %}

{#    <link rel="stylesheet" href="/css/datatables.min.css">#}
{#    <link rel="stylesheet" href="/css/fixedHeader.dataTables.min.css">#}

    {{ encore_entry_link_tags('displays_app') }}


{% endblock %}

{% block body %}
    <div class="container my-2">
        <div class="row">
            <div class="col-4">
                <h3>List of campaigns</h3>
            </div>
            <div class="col-8">
                <a href="{{ path('campaign_create') }}" class="btn btn-success">Add a new campaign</a>
            </div>
        </div>
    </div>

    <div class="container my-2">

        <table class="table-hover table-bordered display" id="myDataTable" width="100%">
            <thead>
            {% set headerRow = "
                <tr>
                    <th>Campaign name </th>
                    <th>Imis Project number </th>

                    <th>Cruises (by Plan Code)</th>
                </tr>
                " %}
            {{ headerRow | raw }}
            </thead>

            <tfoot>
            {{ headerRow | raw }}
            </tfoot>

        </table>
    </div>

{% endblock %}

{% block javascripts %}

    {{ encore_entry_script_tags('displays_app') }}

    <script src="{{ asset('js/Midas_displays/dataTablesForCampaigns.js') }}"></script>

    <script type="text/javascript">
        $(document).ready( function () {
            fillTableCampaigns.init();

        } );
    </script>


{% endblock %}



