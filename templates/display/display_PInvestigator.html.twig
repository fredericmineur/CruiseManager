{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="card">
                <div class="card-header">
                    <h4>Principal investigator</h4>
                    <i>Note for later: make a table</i>

                </div>
                <div class="card-body">
                    <p>{{ principalInvestigator.surname }}, {{ principalInvestigator.firstname }}</p>
                </div>
                <div class="card-footer">
                    {% for cruise in principalInvestigator.cruises %}
                        <div>
                            <p>Cruise {{ cruise.plancode }} for campaign(s): {% for campaign in cruise.campaign %}"{{ campaign.campaign }}", {% endfor %}</p>
                            <p>Trips:
                                {% for trip in cruise.trips %}
                                    {{ trip.startdate |date('d/m/Y') }} to {{ trip.enddate |date('d/m/Y') }}<br>
                                {% endfor %}
                            </p>
                        </div>

                    {% endfor %}
                    <a href="{{ path('edit_principalinvestigator', {'principalInvestigatorId': principalInvestigator.investigatorid}) }}"><i class="fa fa-edit fa-2x"></i></a>

                    <a href="{{ path('remove_PI_warning', {'principalInvestigatorId': principalInvestigator.investigatorid}) }}" class=""><i style="color:red" class="fa fa-trash fa-2x"></i></a>

                </div>
            </div>


        </div>
        <a href="{{ path('principalinvestigators_index') }}" class="btn btn-dark">PI list</a>


    </div>

    <div class="container-fluid">
        <div class="row">
            {% for cruise in principalInvestigator.cruises %}
                <div class="card">
                    <p>Cruise {{ cruise.plancode }} for campaign(s): {% for campaign in cruise.campaign %}"{{ campaign.campaign }}", {% endfor %}</p>
                    <p>Trips:
                        {% for trip in cruise.trips %}
                            {{ trip.startdate |date('d/m/Y') }} to {{ trip.enddate |date('d/m/Y') }}<br>
                        {% endfor %}
                    </p>
                </div>

            {% endfor %}
        </div>
    </div>



{% endblock %}