{% block body %}
    <div class="container my-2">
        <div class="row">
            <div class="col-4">
                <h3>Stations</h3>
            </div>
            <div class="col-8">
                <a href="{{ path('create_station') }}" class="btn btn-success">Add a new station</a>
            </div>
        </div>
    </div>
    
    <div class="container my-2">
        <div class="row">
            <div class="col-8">
                <table class="table-hover table-bordered display" id="myDataTable" width="100%">
                    <thead>
                    {% set headerRow = "
                        <tr>
                            <th>Code</th>
                            <th>Latitude</th>
                            <th>Longitude</th>
                        </tr>"

                %}
                    {{ headerRow | raw }}
                    </thead>
                    <tfoot>{{ headerRow | raw }}</tfoot>

                </table>
            </div>
            <div class="col-4">
                <div id="map-stations" style=" width: 300px; height: 500px;"></div>
            </div>
        </div>
    </div>



{% endblock %}


