{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="card" >
            <div class="card-header">
                <div class="row">
                    <div class="col">
                        <h3>Trip  {{ trip.startdate | date('d/m/Y')}} - {{ trip.enddate | date('d/m/Y')}}</h3>
                    </div>
                    <div class="col">
                        <a href="{{ path('trip_edit', {'tripId': trip.tripid}) }}"><i
                                    class="fa fa-edit fa-5x"></i></a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <p>Destination: {% if trip.destinationarea %}{{ trip.destinationarea }}
                {% else %}N.A.{% endif %}</p>
                <p>Cruise: {% if trip.cruiseid.getPlanCode %}{{ trip.cruiseid.getPlanCode }}
                {% else %}N.A.{% endif %}</p>
                <p>Campaign(s):
                    {% for campaign in trip.cruiseid.campaign %}
                        "{{ campaign.campaign }}"
                        {% if loop.last %}{% else %}, {% endif %}
                    {% endfor %}
                </p>
                <p>Start and end points: {{ trip.startpoint }}-{{ trip.endpoint }}</p>
                <p>Ship: {{ trip.ship }}</p>
                <p>Stations:
                {% for tripstation in trip.tripstations %}"{{ tripstation.stationnr.code}}" {% endfor %}
                </p>
                <p>Investigators:
                    {% for tripinvestigator in trip.tripinvestigators %} {{ tripinvestigator.firstname }} {{ tripinvestigator.surname }}
                    {% if tripinvestigator.investigatornr is not null %}[*]{% endif %}
                    {% endfor %}

                </p>
            </div>
        </div>
    </div>
</div>

{% endblock %}