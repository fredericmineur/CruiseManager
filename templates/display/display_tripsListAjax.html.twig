        <div class="tab-content clearfix">
            <div class="tab-pane active" id="trips-all">
                <h1>ALL</h1>
                <table class="table-hover table-bordered display" id="TableAllTrips" width="100%">
                    <thead>
                    {% set headerRow =
                        "<tr>
                                <th>Start Date [Nb days]</th>
                                <th>Cruise Plancode</th>
                                <th>Status</th>
                                <th>Destination</th>
                                <th>Ship</th>
                            </tr>"
                    %}
                    {{ headerRow | raw }}
                    </thead>
                    <tfoot> {{ headerRow | raw }}</tfoot>
                </table>

            </div>
            <div class="tab-pane" id="trips-for-investigator">
                <h1>Trips to amend (investigators to create)</h1>
                <table class="table-hover table-bordered display" id="TableTripsInvestigators" width="100%">
                    <thead>
                    {% set headerRow =
                        "<tr>
                                    <th>Start Date</th>
                                    <th>Cruise Plancode</th>
                                    <th>Number investigators</th>
                                    <th>Non registered<br>investigators</th>
                                    <th>Edit</th>
                                </tr>"
                    %}
                    {{ headerRow | raw }}
                    </thead>
                    <tfoot> {{ headerRow | raw }}</tfoot>
                </table>


            </div>
            <div class="tab-pane" id="trips-for-station">
                <h1>Trips to amend (stations to create)</h1>
                <table class="table-hover table-bordered display" id="TableTripsStations" width="100%">
                    <thead>
                    {% set headerRow =
