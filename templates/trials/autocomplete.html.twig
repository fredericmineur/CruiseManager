{% extends 'base.html.twig'%}

{% block stylesheets %}


    <link rel="stylesheet" href="{{ asset('EasyAutocomplete-1.3.5/easy-autocomplete.css') }}">
    <link rel="stylesheet" href="{{ asset('EasyAutocomplete-1.3.5/easy-autocomplete.themes.css') }}">
{% endblock %}

{% block body %}

    <input type="text" class="autocompletefirstname" />
    <h2>Break</h2>
    <input type="text" class="autocompletesurname" />
{#    {% dump(nameJSON) %}#}

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('EasyAutocomplete-1.3.5/jquery.easy-autocomplete.js') }}"></script>
    <script>

        var optionsFirstNames = {
            //data: ["blue", "green", "pink", "red", "yellow"]
            data: {{ firstNamesJSON |raw }},
            // url: "midasmanagement/jsonresponse",
            // getValue: "first_name",
            list: {
                match: {
                    enabled: true
                }
            }
        };
        var optionsSurnames = {
            data: {{ surnamesJSON | raw }},
            list: {
                match: {
                    enabled: true
                }
            }
        }

        $(".autocompletefirstname").easyAutocomplete(optionsFirstNames);
        $(".autocompletesurname").easyAutocomplete(optionsSurnames);

    </script>


{% endblock %}