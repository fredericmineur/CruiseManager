<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Midas Management {% block title %}{% endblock %}</title>
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <link rel="icon" href="/Logos/midas.ico">





        <link rel="stylesheet" href="/fontawesome/css/all.css">

        <link rel="stylesheet" href="/EasyAutocomplete-1.3.5/easy-autocomplete.min.css">




        {% block stylesheets %}{% endblock %}
    </head>


    <body>


        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href={{path('midas_management_home')}}>MIDAS Manager</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('cruises_index') }}">Cruises</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('cruise_create')}}">Add a new cruise</a>
                        {#                        <a class="nav-link" href="{{path('cruise_trial_create')}}">Add a new cruise</a>#}
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('campaigns_index') }}">Campaigns</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('campaign_create')}}">Add a new campaign</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('principalinvestigators_index')}}">Investigators</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{path('trips_index')}}">Trips</a>
                    </li>
                </ul>

            </div>
        </nav>

        {% for label, messages in app.flashes %}

            <div class="container">

                <div class="alert alert-{{label}}">
                    {% for message in messages %}
                        <p>{{message | raw}}</p>
                    {% endfor %}
                </div>
            </div>

        {% endfor %}


        {% block body %}{% endblock %}
        <script src="/js/jquery-3.3.1.slim.min.js"></script>
        <script src="/js/popper.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>


        <script src="/EasyAutocomplete-1.3.5/jquery.easy-autocomplete.min.js"></script>

        {% block javascripts %}{% endblock %}
    </body>
</html>
