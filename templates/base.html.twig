<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Midas Management {% block title %}{% endblock %}</title>
{#        <link rel="stylesheet" href="/css/bootstrap.min.css">#}
        {{ encore_entry_link_tags('base_app') }}
        <link rel="icon" href="/Logos/midas.ico">
{#        <link rel="stylesheet" href="/fontawesome/css/all.css">#}
{#        <link rel="stylesheet" href="/EasyAutocomplete-1.3.5/easy-autocomplete.min.css">#}
        <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />

        {% block stylesheets %}{% endblock %}
    </head>


    <body>

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href={{path('midas_management_home')}}>MIDAS Manager</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('cruises_index') }}" data-toggle="tooltip" title="List of cruises">Cruises</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('cruise_create') }}" data-toggle="tooltip" title="Create cruise"><span><i class="fa fa-plus-square"></i></span>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('campaigns_index') }}" data-toggle="tooltip" title="List of campaigns">Campaigns</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('campaign_create') }}" data-toggle="tooltip" title="Create campaign"><span><i class="fa fa-plus-square"></i></span>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{path('investigators_index')}}" data-toggle="tooltip" title="List of investigators">Investigators</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('create_investigator') }}" data-toggle="tooltip" title="Create investigator"><span><i class="fa fa-plus-square"></i></span>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{path('display_all_stations')}}" data-toggle="tooltip" title="List of stations">Stations</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('create_station') }}" data-toggle="tooltip" title="Create station"><span><i class="fa fa-plus-square"></i></span>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('display_periods') }}" data-toggle="tooltip" title="List of periods">Periods</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('create_period') }}" data-toggle="tooltip" title="Create period"><span><i class="fa fa-plus-square"></i></span>
                            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{path('trips_index')}}" data-toggle="tooltip" title="List of trips, with links to create missing investigators and stations">Trips</a>
                    </li>


                </ul>

            </div>
        </nav>

        {% for label, messages in app.flashes %}

            <div class="container">

                <div class="alert alert-{{label}}">
                    {% for message in messages %}
                        <p>{{message | raw}}</p>
                    {% endfor %}
                </div>
            </div>

        {% endfor %}


        {% block body %}{% endblock %}




        {{ encore_entry_script_tags('base_app') }}

        <script>$(function () {
                $('[data-toggle="tooltip"]').tooltip()
            })</script>

        {% block javascripts %}

        {% endblock %}
    </body>
</html>
