{% block _cruise_campaign_widget %}
        {{ form_widget(form) }}
        <input type="hidden" id="widgets-counter-campaigns" value="0">
        <div class="form-group">
            <button type="button" id="add-campaign" class="btn btn-primary">Add campaign</button>
        </div>
{% endblock %}

{% block _cruise_campaign_entry_widget %}
    <div class="form-group block_cruise_campaign" id="row{{ id }}">
        <div class="row my-2">
             <div class="col-11">
                {{ form_widget(form) }}
             </div>
             <div class="col-1">
                 <button type="button" id="remove-campaign" class="btn btn-danger" data-action="delete" data-target="#row{{ id }}">X</button>
             </div>
         </div>
    </div>
{% endblock %}

