{% block _trip_station_entry_row %}
    {{ form_widget(form) }}
{% endblock %}


{% block _trip_station_widget %}
    {#    <p>Assign cruise to campaign</p>#}

    {{ form_widget(form) }}
    <input type="hidden" id="widgets-counter-stations" value="0">
    <div class="form-group">
        <button type="button" id="add-station" class="btn btn-primary">Add station</button>
    </div>


{% endblock %}

{% block _trip_station_entry_widget %}
    <div class="form-group" id="block_{{ id }}">
        <div class="row">
            <div class="col-10">
                {{ form_widget(form) }}
            </div>
            <div class="col-2">
                <button type="button" id="remove-station" class="btn btn-danger" data-action="delete" data-target="#block_{{ id }}">X</button>
            </div>
        </div>
    </div>
{% endblock %}