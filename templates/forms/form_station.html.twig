{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-4">
                        {% if mode == 'edit' %} <h5>Edit Station</h5>
                        {% elseif mode == 'create' %} <h5>Create station</h5>  {% endif %}
                    </div>
                    <div class="col-8">
                        <p>Tip: CTRL + F5 for hard refresh (NB: unsaved fields will also be emptied)</p>
                    </div>
                </div>

            </div>
            <div class="card-body">
                {{ form_start (formStation) }}
                <div class="row">
                    <div class="col-6">{{ form_row(formStation.code) }}</div>
                </div>
                <div class="row">


                    <div class="col-4">
                        {{ form_row(formStation.latitude) }}
                    </div>
                    <div class="col-2" style="text-align: center;">
                        <button type="button" name="convert" value="latitude" style="position: absolute; bottom: 20px; left: 60px;">
                            &#8592; Convert</button>
                    </div>

                    <div class="col-2">
                        <label for="latDeg" class="required">Latitude Degrees</label>
                        <input type="text" class="form-control" id="latDeg">
                    </div>
                    <div class="col-2">
                        <label for="latMin" class="required">Minutes</label>
                        <input type="text" class="form-control" id="latMin">
                    </div>
                    <div class="col-2">
                        <label for="latSec" class="required">Seconds</label>
                        <input type="text" class="form-control" id="latSec">
                    </div>

                </div>
                <div class="row">
                    <div class="col-4">
                        {{ form_row(formStation.longitude) }}
                    </div>
                    <div class="col-2" style="text-align: center;">
                        <button type="button" name="convert" value="longitude" style="position: absolute; bottom: 20px; left: 60px;">
                            &#8592; Convert</button>
                    </div>
                    <div class="col-2">
                        <label for="longDeg" class="required">Longitude Degrees</label>
                        <input type="text" class="form-control" id="longDeg">
                    </div>
                    <div class="col-2">
                        <label for="longMin" class="required">Minutes</label>
                        <input type="text" class="form-control" id="longMin">
                    </div>
                    <div class="col-2">
                        <label for="longSec" class="required">Seconds</label>
                        <input type="text" class="form-control" id="longSec">
                    </div>


                </div>

            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-success">
                    {% if mode == 'edit' %}
                        Save changes{% elseif mode == 'create' %}
                        Save {% endif %}
                </button>
                {{ form_end(formStation) }}
            </div>
        </div>
    </div>

{% endblock %}

