{% block javascripts %}
    <script src="/EasyAutocomplete-1.3.5/jquery.easy-autocomplete.js"></script>

    <script>
        var optionsFirstNames = {
            data: {{ firstNamesTripInvJson | raw }},
            list: {
                match: {
                    enabled: true
                }
            }
        };

        var optionsSurnames = {
            data: {{ surnamesTripInvJson | raw }},
            list: {
                match: {
                    enabled: true
                }
            }
        }

        //statements also reinstated when creating a new trip investigator
        $(".autocomplete-first-name").easyAutocomplete(optionsFirstNames);
        $(".autocomplete-surname").easyAutocomplete(optionsSurnames);

    </script>

    <script src="/js/addTripinvestigatorsToTrip.js"></script>
    <script src="/js/addStationToTrip.js"></script>



{% endblock %}