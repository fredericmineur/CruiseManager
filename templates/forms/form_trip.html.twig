{% extends 'base.html.twig' %}
{% form_theme formTrip with [
    'forms/_collection_trip_stations.html.twig',
    'forms/_collection_trip_tripinvestigators.html.twig',
    _self]
%}

{#'forms/_collection_trip_tripinvestigators'#}



 {% block stylesheets %}

     <style>

         .card{
             margin-bottom: 30px;
         }
     </style>



 {% endblock %}

{% block body %}
    <div class="container">

        <div class="card">
            <div class="card-header">
                <h3>Trip  {{ trip.startdate | date('d/m/Y')}} - {{ trip.enddate | date('d/m/Y')}}</h3>
            </div>
            <div class="card-body">
                <p>Destination: {{ trip.destinationarea }}</p>
                <p>Cruise {{ trip.cruiseid.getPlanCode }}</p>
                <p>Campaign(s):
                    {% for campaign in trip.cruiseid.campaign %}
                        "{{ campaign.campaign }}"
                        {% if loop.last %}{% else %}, {% endif %}
                    {% endfor %}
                </p>
            </div>


        </div>


        {{form_start(formTrip)}}



        <div class="row">
            <div class="col">
                {{ form_row(formTrip.startdate) }}
            </div>
            <div class="col">
                {{ form_row(formTrip.enddate) }}
            </div>
            <div class="col">
                {{ form_row(formTrip.destinationarea) }}
            </div>
        </div>



    <div class="card" style="background-color: #95c9ec">
        <div class="card-header">
            <div class="row">
                <div class="col-4">
                    Surname
                </div>
                <div class="col-4">
                    First name
                </div>

            </div>
        </div>
        <div class="card-body">
            {{ form_widget(formTrip.tripinvestigators) }}
        </div>


    </div>




        <div class="row">
            <div class="col">
                <div class="card" style="width: 500px !important; background-color: #f3a29a" >
                    <div class="card-header">
                        <p>Stations</p>
                        <input type="hidden" id="widgets-counter-stations" value="0">
                    </div>
                    <div class="card-body">
                        {{ form_widget(formTrip.stations) }}
                    </div>
                </div>
            </div>
            <div class="col">
                <button type="submit" class="btn btn-warning">Submit modifications</button>
                <a href="{{ path('cruise_edit', {'cruiseId' : trip.cruiseid.cruiseid })}}" class="btn btn-outline-primary">Back to cruise form</a>
            </div>
        </div>




        {{form_end(formTrip)}}



    </div>
{% endblock %}





