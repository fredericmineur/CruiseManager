{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css" integrity="sha256-bLNUHzSMEvxBhoysBE7EXYlIrmo7+n7F4oJra1IgOaM=" crossorigin="anonymous" />
    <style>

        div[id^=block_cruise_trips_] {
            margin-bottom: 0px!important;
            margin-top: 0px!important;
            padding-bottom: 0px!important;
            padding-top: 0px!important;
        }
        div[id^=block_cruise_trips_] div.row  {
            margin-bottom: 0px!important;
            margin-top: 0px!important;
            padding-bottom: 0px!important;
            padding-top: 0px!important;
        }

        .card-header .fa {
            transition: .3s transform ease-in-out;
        }
        .card-header .collapsed .fa {
            transform: rotate(90deg);
        }

    </style>

{% endblock %}

{% form_theme formCruise with
    [
    'forms/_collection_cruise_campaigns.html.twig',
    'forms/_collection_cruise_trips_tripinvestigators.html.twig',
    _self
    ]
%}

{% block body %}

    {% if mode=='new' %}
        <h2>Create Cruise</h2>
    {% elseif mode=='edit'%}
        <h2>Edit Cruise</h2>
    {% endif %}

    {{ form_start(formCruise) }}
    <div class="container">

        <div class="row">
            <div class="col-4">
                <div class="card">
                    <div class="card-header">
                        {{ form_label(formCruise.plancode) }}
                    </div>
                    <div class="card-body">
                        {% if mode=='new' and newplancode is defined and newplancode is not empty %}
                            <h5><span class="badge badge-info">This new plancode is generated automatically</span></h5>
                            {{ form_widget(formCruise.plancode,{'attr': {'value': newplancode}}) }}
                        {% else %}
                            {{ form_widget(formCruise.plancode,{'attr': {'placeholder': 'xx-xxx'}}) }}
                        {% endif %}
                    </div>
                </div>
            </div>

            <div class="col-4">
                <div class="card">
                    <div class="card-header">
                        {{ form_label(formCruise.principalinvestigator) }}
                    </div>
                    <div class="card-body">
                        {{ form_widget(formCruise.principalinvestigator) }}
                    </div>
                </div>
            </div>

            <div class="col-4">
                {% if mode=='new' %}
                    <button type="submit" class="btn btn-primary">Submit the new cruise</button>
                {% elseif mode=='edit'%}
                    <button type="submit" class="btn btn-primary">Submit modifications</button>
                {% endif %}
            </div>
        </div>

        <div class="card my-3">
            <div class="card-header">
                {{ form_label(formCruise.campaign) }}
            </div>
            <div class="card-body">
                {{ form_widget(formCruise.campaign) }}
            </div>
        </div>
    </div>

    <div class="container-fluid">
        {{ form_widget(formCruise.trips) }}
    </div>
    {{ form_end(formCruise) }}
{% endblock %}


{% block javascripts %}
    <script src="/EasyAutocomplete-1.3.5/jquery.easy-autocomplete.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.full.min.js"></script>
    <script src="/js/addTripsToCruisePlusTripInvestigators.js"></script>
    <script src="/js/addCampaignsToCruise.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js" integrity="sha256-bqVeqGdJ7h/lYPq6xrPv/YGzMEb6dNxlfiTUHSgRCp8=" crossorigin="anonymous"></script>

    <script>
        $(document).ready(function () {

            //on document load (e.g. when trip blocks are already there...e.g. on edit mode, or instantiations in the controller (in the development process
            addTripsAndInvestigators.init();
            addCampaigns.init();
            $('#cruise_principalinvestigator').select2();

        });
    </script>

{% endblock %}